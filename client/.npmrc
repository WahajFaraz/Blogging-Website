# Ensure packages are installed with the correct permissions
unsafe-perm=true

# Force npm to use the latest version of npm
npm@latest

# Ensure peer dependencies are installed
auto-install-peers=true

# Enable strict SSL
strict-ssl=false

# Configuration for npm
engine-strict=true
legacy-peer-deps=true
strict-peer-dependencies=false

# Increase network timeout to 5 minutes
timeout=300000

# Registry
registry=https://registry.npmjs.org/