# Ensure package-lock is generated with exact versions
package-lock=true

# Use exact versions in package-lock.json
save-exact=true

# Use the public npm registry
registry=https://registry.npmjs.org/

# Set network timeout to 10 minutes
timeout=600000

# Enable engine-strict mode
engine-strict=true

# Enable legacy peer deps to handle dependency conflicts
legacy-peer-deps=true
